<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/huayuanxinchengriver"
                android:adjustViewBounds="true"
                android:alpha="0.9"/>

        <TextView
                android:id="@+id/title"
                android:text="Let's Get Some Weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="85dp"
                android:textAlignment="center"
                android:textColor="#aae3a1"
                android:fontFamily="@font/weathersunday"
                android:paddingLeft="-30dp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="10"
                android:layout_centerInParent="true" />

    </RelativeLayout>


    <TextView
            android:id="@+id/text_view_date_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="35dp"
            android:textAlignment="center"
            android:background="#a5bfa1"/>

    <TextView
            android:id="@+id/text_view_date_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="35dp"
            android:textAlignment="center"
            android:background="#6474e261"/>

    <Button
            android:id="@+id/get_weather"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Get My Weather!"
            android:textColor="#000"
            android:background="#247616"/>

</LinearLayout>
